{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://livectf.com/challenges.schema.json",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "challenge_id": {
                "type": "integer"
            },
            "challenge_short_name": {
                "type": "string"
            },
            "challenge_name": {
                "type": "string"
            },
            "releases_at": {
                "type": "string",
                "format": "date-time"
            },
            "closes_at": {
                "type": "string",
                "format": "date-time"
            }
        }
    }
}